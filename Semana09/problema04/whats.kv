BoxLayout:
    canvas:
        Color:
            rgba:0.92,0.92,0.92,1
        Rectangle:
            size:self.size
            pos:self.pos
    orientation:'vertical'
    AppBar:
    Space: 
    Menu:
    ScrollView:
        BoxLayout:
            size_hint_y: None
            height:self.minimum_height
            orientation:'vertical'
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Chat:
            Widget:

<AppBar@BoxLayout>:
    padding:'6dp'
    canvas:
        Color:
            rgba:0,0.3,0.13,1
        Rectangle:
            size:self.size
            pos:self.pos
    size_hint_y:None
    height: '50dp'
    Label:
        text:'SleyderWhats'
        bold:True
        font_size:'22dp'
        haling:'left'
        text_size:self.size
        valign:'center'
        padding_x:'10dp'
    Icon:
        background_normal:'images/lupa.png'
        active:True
    Icon:
        background_normal:'images/pontinhos.png'
        active:True

<Foto@Widget>:
    canvas:
        Color:
            rgba:1,1,1,1
        Ellipse:
            size:self.size
            pos:self.pos
            source:'images/logo.png'
    size_hint_x:None
    width:self.height

<Space@Widget>:
    canvas:
        Color:
            rgba:0,0.3,0.13,1
        Rectangle:
            size:self.size
            pos:self.pos
    size_hint_y:None
    height:'16dp'

<Chat@BoxLayout>:
    canvas:
        Color:
            rgba: 0,0,0,0.2
        Line:
            width:1
            points: self.x+self.height, self.y, self.x+self.width-20, self.y
    size_hint_y:None
    height:'80dp'
    Foto:
    BoxLayout:
        orientation:'vertical'
        padding:'13dp'
        Label:
            text:'Monkey D. Luffy'
            color: 0,0,0,1
            text_size:self.size
            haling:'left'
            valign:'center'
            bold:True
        Label:
            text:'Luffy: Kaizoku ou ni naru otoko da'
            text_size:self.size
            haling:'left'
            color: 0,0,0,0.8
            valign:'center'
    BoxLayout:
        size_hint_x: None
        width:'80dp'
        padding: '7dp'
        Label:
            text:'19:01'
            color: 0,0,0,0.5
            text_size:self.size
            valign:'top'
            haling:'right'


<Menu@BoxLayout>:
    canvas:
        Color:
            rgba:0,0.3,0.13,1
        Rectangle:
            size:self.size
            pos:self.pos
    padding: '2dp'
    spacing: '5dp'
    size_hint_y:None
    height:'35dp'
    Icon:
        background_normal:'images/camera.png'
    MenuButton:
        text: 'Conversas'
        active: True
    MenuButton:
        text: 'Status'
    MenuButton:
        text: 'Chamadas'

<MenuButton@Button>:
    active: False
    canvas:
        Color:
            rgba:1,1,1,1
        Line:
            width:4 if root.active else 0.0000001
            points:self.x, self.y+1.5, self.x+self.width, self.y+1.5
    background_color:0,0,0,0
    bold: True
    color:(1,1,1,1) if root.active else (1,1,1,0.5)

<Icon@Button>:
    active: False
    size_hint_x:None
    width:self.height
    border: 0,0,0,0
    background_color:(1,1,1,1) if root.active else (1,1,1,0.5)